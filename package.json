  "author": "Anatoly",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/anatolyben/telegram-automation-framework"
  },
  "homepage": "https://github.com/anatolyben/telegram-automation-framework#readme",
  "bugs": {
    "url": "https://github.com/anatolyben/telegram-automation-framework/issues"
  },
  "dependencies": {
    "node-telegram-bot-api": "^0.67.0",
    "pg": "^8.11.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "eslint": "^8.54.0",
    "nodemon": "^3.0.1"
  },
  "engines": {
    "node": ">=16.0.0"
