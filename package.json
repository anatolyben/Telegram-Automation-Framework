{
  "name": "telegram-automation-framework",
  "version": "1.0.0",
  "description": "Event-driven, middleware-based framework for Telegram group moderation and workflow automation",
  "type": "module",
  "main": "src/index.js",
  "exports": {
    ".": "./src/index.js",
    "./core": "./src/core/index.js",
    "./adapters": "./src/adapters/index.js"
  },
  "files": [
    "src/",
    "README.md",
